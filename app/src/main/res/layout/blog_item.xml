<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D7E2E6"
    android:backgroundTint="#EDD9D9"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/cardHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/montserrat_semibold"
            android:maxLines="2"
            android:text="The Day We Found Bruno – A Street Dog’s Journey to Hope"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardView"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardUsername"
            app:layout_constraintEnd_toStartOf="@+id/cardUsername"
            app:layout_constraintTop_toTopOf="@+id/cardUsername">

            <ImageView
                android:id="@+id/cardPfp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dogpfp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cardUsername"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:maxLines="2"
            android:padding="5dp"
            android:text="New Blogger"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium_italic"
            android:text="May25,2025"
            android:textColor="@color/datecolor"
            app:layout_constraintEnd_toEndOf="@+id/cardUsername"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardUsername" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="9dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="@+id/cardUsername"
            app:layout_constraintStart_toStartOf="@+id/cardHeading"
            app:layout_constraintTop_toBottomOf="@+id/cardDate" />

        <TextView
            android:id="@+id/cardPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="9dp"
            android:fontFamily="@font/montserrat_light"
            android:letterSpacing="0.03"
            android:lineHeight="22sp"
            android:maxLines="4"
            android:text="It was a hot summer afternoon when I first saw him—curled up under a parked scooter near our apartment gate. His fur was dirty and patchy, and his eyes were full of pain and fear. People passed by without noticing him, just like he was a shadow. But something in those tired eyes made me stop."
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <Button
            android:id="@+id/btnCardReadmore"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Read more"
            app:cornerRadius="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardPost"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cardLikecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnCardReadmore"
            app:layout_constraintTop_toTopOf="@+id/btnCardReadmore"
            app:layout_constraintVertical_bias="0.714"
            tools:layout_editor_absoluteX="16dp" />

        <ImageButton
            android:id="@+id/btnCardLike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/cardLikecount"
            app:layout_constraintStart_toEndOf="@+id/cardLikecount"
            app:layout_constraintTop_toTopOf="@+id/cardLikecount"
            app:srcCompat="@drawable/heart" />

        <ImageButton
            android:id="@+id/btnCardSave"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/btnCardLike"
            app:layout_constraintStart_toEndOf="@+id/btnCardLike"
            app:layout_constraintTop_toTopOf="@+id/btnCardLike"
            app:srcCompat="@drawable/save" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>